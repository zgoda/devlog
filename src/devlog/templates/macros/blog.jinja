{% macro render_post_headline(post) %}
<div class="card">
  <div class="card-content">
    <h2 class="title is-3">{{ post.title }}</h2>
    <div class="content">
      <p class="card-text">{{ post.summary_html|safe }}</p>
      <a href="{{ url_for('post.display', post_id=post.id) }}" class="card-link">{{ gettext('read more') }}</a>
    </div>
  </div>
</div>
{% endmacro %}
