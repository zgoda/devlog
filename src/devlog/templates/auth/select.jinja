{% extends "auth/base.jinja" %}

{% block extracss %}
<link rel="stylesheet" href="/static/vendor/bootstrap-social.min.css">
{% endblock %}

{% block pagetitle %}{{ gettext('select login provider').capitalize() }}{% endblock %}

{% block widecontent %}
<h1>{{ gettext('select login provider').capitalize() }}</h1>
<p>{{ gettext('Select site to authenticate with') }}.</p>
<div class="card">
  <div class="card-body">
    <a class="btn btn-social btn-github" href="{{ url_for('auth.login', provider='github') }}"><span class="fab fa-github"></span>&nbsp;Github</a>
  </div>  
</div>
<div class="card">
  <div class="card-body">
    <a class="btn btn-primary" href="{{ url_for('auth.login', provider='local') }}"><span class="far fa-compass"></span>&nbsp;Local</a>
  </div>  
</div>
{% endblock %}
