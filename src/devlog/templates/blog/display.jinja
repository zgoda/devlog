{% extends "blog/base.jinja" %}

{% from "macros/blog.jinja" import render_post_headline %}

{% block pagetitle %}{{ blog.name }}{% endblock %}

{% block content %}
<h1>{{ blog.name }}</h1>
{% if blog.blurb_html %}
{{ blog.blurb_html|safe }}
{% endif %}
{% if current_user == blog.user %}
<p>
  <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#owner-toolbox" aria-expanded="false" aria-controls="owner-toolbox"><i class="fas fa-cog"></i>&nbsp;{{ gettext('tools') }}</button>
</p>
<div class="collapse" id="owner-toolbox">
  <ul class="list-inline">
    <li class="list-inline-item"><a href="{{ url_for('blog.details', blog_id=blog.id) }}">{{ gettext('edit blog') }}</a></li>
    <li class="list-inline-item"><a href="">{{ gettext('add post') }}</a></li>
  </ul>
</div>
{% endif %}
{% for post in posts.items %}
{{ render_post_headline(post) }}
{% endfor %}
{% endblock %}
